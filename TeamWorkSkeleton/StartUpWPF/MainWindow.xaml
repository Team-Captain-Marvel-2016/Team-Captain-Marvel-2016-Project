<Window x:Class="StartUpWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartUpWPF"
        mc:Ignorable="d"
        Title="SoccerRPG" Height="540" Width="960"
        Background="Black">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Canvas Name="PlayFieldCanvas"
                HorizontalAlignment="Left"
                Height="400" Width="640"
                Margin="160,0,0,0" 
                VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Canvas.Background>
                <ImageBrush ImageSource="imgs/footballpitch.png"></ImageBrush>
            </Canvas.Background>
        </Canvas>
        <Button x:Name="StartBtn" Content="Start Game" 
                HorizontalAlignment="Left" Margin="400,180,0,0"
                VerticalAlignment="Top" Width="160" Height="40" 
                FontSize="24" Background="PaleGreen" Foreground="ForestGreen"
                Click="StartBtn_Click"/>
        <Button x:Name="MoveUpBtn" Content="Up"
                HorizontalAlignment="Left" Margin="60,160,0,0"
                VerticalAlignment="Top" Width="40" Height="40"/>
        <Button x:Name="MoveDownBtn" Content="Down"
                HorizontalAlignment="Left" Margin="60,260,0,0"
                VerticalAlignment="Top" Width="40" Height="40"/>
        <Button x:Name="MoveLeftBtn" Content="Left"
                HorizontalAlignment="Left" Margin="10,210,0,0"
                VerticalAlignment="Top" Width="40" Height="40"/>
        <Button x:Name="MoveRightBtn" Content="Right"
                HorizontalAlignment="Left" Margin="110,210,0,0"
                VerticalAlignment="Top" Width="40" Height="40"/>
        <Button x:Name="PrevPlayerBtn" Content="Prev" 
                HorizontalAlignment="Left" Margin="10,120,0,0"
                VerticalAlignment="Top" Width="60" Height="30"/>
        <Button x:Name="NextPlayerBtn" Content="Next" 
                HorizontalAlignment="Left" Margin="90,120,0,0"
                VerticalAlignment="Top" Width="60" Height="30"/>
        <Button x:Name="PassBtn" Content="Pass" 
                HorizontalAlignment="Left" Margin="90,310,0,0"
                VerticalAlignment="Top" Width="60" Height="30"/>
        <Button x:Name="ShootBtn" Content="Shoot" 
                HorizontalAlignment="Left" Margin="10,310,0,0"
                VerticalAlignment="Top" Width="60" Height="30"/>
        <Button x:Name="EndTurnBtn" Content="End Turn" 
                HorizontalAlignment="Left" Margin="10,10,0,0"
                VerticalAlignment="Top" Width="60" Height="30" Click="EndTurnBtn_Click"/>


    </Grid>
</Window>
